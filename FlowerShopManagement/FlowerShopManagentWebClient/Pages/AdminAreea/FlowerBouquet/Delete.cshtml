@page
@model FlowerShopManagentWebClient.Pages.AdminAreea.FlowerBouquet.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
@if (ViewData["Message"] != null)
{
    <h3 style="color:red">@ViewData["Message"]</h3>
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between">
        <h2>
            Are you sure to delete this flower bouquet?
        </h2>
        <a asp-page="./Index">Back to List</a>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet.FlowerBouquetName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerBouquet.FlowerBouquetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerBouquet.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet.UnitPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerBouquet.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet.UnitsInStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerBouquet.UnitsInStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet.FlowerBouquetStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerBouquet.FlowerBouquetStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerBouquet.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerBouquet.Supplier.SupplierName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="FlowerBouquet.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
