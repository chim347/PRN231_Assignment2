@page
@model FlowerShopManagentWebClient.Pages.AdminAreea.FlowerBouquet.IndexModel

@{
    ViewData["Title"] = "Index";
}
@if (ViewData["Message"] != null)
{
    <h3 style="color:red">@ViewData["Message"]</h3>
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h2>List flower bouquets</h2>

        <p>
            <a href="FlowerBouquet/Create" class="btn btn-dark">Create New</a>
        </p>
        <p>
            <a href="/Manage/AdminPage" class="btn btn-dark">Back to menu</a>
        </p>
    </div>

    <div class="row">
        <div class="col-4">
            <form id="form-search" class="my-4">
                <h4>Search</h4>
                <div class="form-group mb-2">
                    <input name="keyword" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <input type="submit" value="Search" class="btn btn-primary" />
                    <button id="clear-search" class="btn btn-info">Reset</button>
                </div>
            </form>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerBouquets[0].FlowerBouquetName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerBouquets[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerBouquets[0].UnitPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerBouquets[0].UnitsInStock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerBouquets[0].FlowerBouquetStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerBouquets[0].Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerBouquets[0].Supplier)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FlowerBouquets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlowerBouquetName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitsInStock)
                    </td>
                    <td>
                        @if (item.FlowerBouquetStatus == 1)
                        {
                            <span style="color: green">Active</span>
                        }
                        else
                        {
                            <span style="color: red">Deleted</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
